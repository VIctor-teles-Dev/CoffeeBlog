<article class="max-w-3xl mx-auto px-4 md:px-0">
  <div class="mb-8">
    <div class="flex items-center gap-3 text-sm mb-4">
      <div class="flex items-center gap-2 text-amber-500 font-mono">
        <i data-lucide="calendar" class="w-4 h-4"></i>
        <%= (@blog_post.date || @blog_post.created_at).strftime("%d %b, %Y") %>
      </div>
      <span class="text-[#57534e]">â€¢</span>
      <span class="bg-[#292524] text-[#a8a29e] px-2 py-0.5 rounded text-xs"><%= @blog_post.category %></span>
    </div>

    <h1 class="text-2xl md:text-4xl font-bold text-[#e7e5e4] mb-4 leading-tight">
      <%= @blog_post.title %>
    </h1>

    <div class="flex items-center gap-2 text-[#78716c] text-sm">
      <i data-lucide="clock" class="w-4 h-4"></i>
      <span><%= @blog_post.reading_time %> <%= t('blog.reading_time') %></span>
    </div>
  </div>

  <div class="prose prose-sm md:prose-base prose-invert prose-amber max-w-none">
    <div class="text-[#a8a29e] text-base md:text-lg leading-relaxed mb-8 font-medium border-l-4 border-amber-500 pl-4">
      <%= @blog_post.summary %>
    </div>
    
    <div class="text-[#d6d3d1] leading-relaxed space-y-4">
      <%= markdown(@blog_post.body) %>
    </div>
  </div>
</article>
