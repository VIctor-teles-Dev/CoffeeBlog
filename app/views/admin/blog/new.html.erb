<div class="max-w-3xl mx-auto">
  <div class="flex items-center gap-3 mb-8">
    <%= link_to admin_blog_index_path, class: "p-2 hover:bg-[#292524] rounded-lg transition-colors text-[#a8a29e] hover:text-[#e7e5e4]" do %>
      <i data-lucide="arrow-left" class="w-5 h-5"></i>
    <% end %>
    <h1 class="text-2xl font-bold text-[#e7e5e4]">Novo Post</h1>
  </div>

  <div class="bg-[#1c1917] rounded-xl border border-[#292524] p-6 md:p-8">
    <%= render "form", blog_post: @blog_post %>
  </div>
</div>
