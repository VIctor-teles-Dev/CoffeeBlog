<nav class="relative flex justify-between items-center px-6 xl:px-12 py-6 text-[#a8a29e] border-y border-[#1c1917] bg-coffee z-50 mb-12 md:mb-20" data-controller="navbar">
  <!-- Logo -->
  <div class="flex items-center gap-3 z-50 relative">
    <div class="bg-amber-500 p-2 rounded-xl text-black shadow-lg shadow-amber-500/20">
     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-code-icon lucide-code w-6 h-6 stroke-[2.5]"><path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/></svg>
    </div>
    <span class="text-2xl font-bold text-white tracking-tight">Coffee<span class="text-amber-500">Codes</span></span>
  </div>

  <button class="xl:hidden text-white focus:outline-none" data-action="click->navbar#toggle">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
  </button>


  <div class="hidden xl:flex fixed xl:static inset-0 bg-[#1A120B] xl:bg-transparent z-50 flex-col xl:flex-row xl:items-center xl:gap-8 transition-all duration-300" data-navbar-target="menu">
    

    <div class="flex xl:hidden justify-between items-center p-6 border-b border-[#292524]">
       <div class="flex items-center gap-3">
         <div class="bg-amber-500 p-2 rounded-xl text-black">
           <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-code-icon lucide-code w-6 h-6 stroke-[2.5]"><path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/></svg>
         </div>
         <span class="text-2xl font-bold text-white">Coffee<span class="text-amber-500">Codes</span></span>
       </div>
       <button class="text-[#a8a29e] hover:text-white" data-action="click->navbar#toggle">
         <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
       </button>
    </div>

    <!-- Links -->
    <ul class="flex flex-col xl:flex-row gap-2 xl:gap-8 p-4 xl:p-0 w-full xl:w-auto">
      <li><%= nav_link_to t('navbar.home'), root_path, icon: "coffee" %></li>
      <li><%= nav_link_to t('navbar.about'), about_path, icon: "user" %></li>
      <li><%= nav_link_to t('navbar.projects'), project_path, icon: "briefcase" %></li>
      <li><%= nav_link_to t('navbar.blog'), blog_index_path, icon: "book" %></li>

      <li><%= nav_link_to t('navbar.contact'), contact_path, icon: "mail" %></li>
      
      <!-- Locale Switcher -->
      <li class="flex items-center gap-2 ml-4 border-l border-[#292524] pl-4">
        <%= link_to "EN", url_for(locale: :en), class: "text-sm font-medium #{I18n.locale == :en ? 'text-amber-500' : 'text-[#a8a29e] hover:text-white'} transition-colors" %>
        <span class="text-[#292524]">/</span>
        <%= link_to "PT", url_for(locale: :'pt-BR'), class: "text-sm font-medium #{I18n.locale == :'pt-BR' ? 'text-amber-500' : 'text-[#a8a29e] hover:text-white'} transition-colors" %>
      </li>
    </ul>
  </div>
</nav>
